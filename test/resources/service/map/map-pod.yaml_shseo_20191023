apiVersion: apps/v1
kind: StatefulSet
metadata:
  name: usmsf-map
spec:
  selector:
    matchLabels:
      app: usmsf-map
  replicas: 1
  serviceName: "usmsf-map-svc"
  template:
    metadata:
      labels:
        app: usmsf-map
        version: v1
    spec:
      volumes:
      - name: shared-data
        emptyDir: {}
      - name: config-if-volume
        configMap:
          name: usmsf-if-conf
      - name: config-map-volume-0
        configMap:
          name: usmsf-map-conf0
      - name: config-map-volume-1
        configMap:
          name: usmsf-map-conf1
      containers:
      - name: mapif
        image: camel.uangel.com:5000/map_svc:latest
        imagePullPolicy: Always
        volumeMounts:
        - name: config-if-volume
          mountPath: /home/app/config
        - name: config-map-volume-0
          mountPath: /home/app/srg_conf_0
        - name: config-map-volume-1
          mountPath: /home/app/srg_conf_1
        - name: shared-data
          mountPath: /tmp
        ports:
        - containerPort: 8080
        env:
        - name: USMSF_HOME
          value: /home/app
        - name: USMSF_CONFIG_FILE
          value: /home/app/home/data/httpif.conf
        - name: SVC_POD_HOST
          value: usmsf-svc-internal.default.svc.cluster.local:8011
        - name: ULAYER_MY_IP
          value: 10.101.179.210                 
        - name: ULAYER_PEER_IP
          value: 10.101.179.211
        - name: TRACE_HOME_ENV_NAME 
          value: /tmp/trace
        - name: EM_HOST 
          value: localhost:9090
        - name: CONF_POD_HOST
          value: uccms-svc:8086 
      - name: emsubagt
        image: camel.uangel.com:5000/emsubagt:latest
        imagePullPolicy: Always
        volumeMounts:
        - name: shared-data
          mountPath: /tmp
        env:
        - name: EM_SERVICE
          value: emagt.default.svc.cluster.local
        - name: MY_SERVICE
          value: MAP_SERVICE
        - name: EM_HTTP_PORT
          value: "9292"
        - name: EM_WS_PORT
          value: "9393"
        - name: MY_GROUP
          value: MAP_SERVICE
        - name: MYSQL_ADDR
          value: "smsf-maxscale-masteronly.default.svc.cluster.local"
        - name: ENABLED_TRACE
          value: "true"
        - name: MMCD
          value: "false"
      initContainers:
      - name: init-sysctl
        image: busybox
        command:
        - /bin/sh
        - -c
        - |
          sysctl -w kernel.msgmax=65536
          sysctl -w kernel.msgmni=80000
          sysctl -w kernel.msgmnb=2048000
          sysctl -w net.ipv4.tcp_mem="8388608 8388608 10485760"
        securityContext:
          privileged: true
---
